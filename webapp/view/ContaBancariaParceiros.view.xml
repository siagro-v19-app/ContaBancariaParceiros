<mvc:View xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	displayBlock="true"
	controllerName="br.com.idxtecContaBancariaParceiros.controller.ContaBancariaParceiros"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:t="sap.ui.table"
	width="100%"
	height="100%">
	<App id="app">
		<pages>
			<Page showHeader="false">
				<content>
					<VBox class="sapUiSmallMargin">
						<Panel headerText="Conta Bancária - Parceiros">
							<t:Table id="tableContaBancaria"
								rows="{
									path: '/ContaBancariaParceiross',
									parameters: {
										expand: 'ParceiroNegocioDetails'
									}
								}"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Interactive"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de Contas Bancárias"/> 
										<ToolbarSpacer/>
									</Toolbar>
								</t:toolbar>
								<t:columns>
									<t:Column filterProperty="ParceiroNegocioDetails/RazaoSocial" 
											  sortProperty="ParceiroNegocioDetails/RazaoSocial">
										<Label text="Razão Social"/>
										<t:template>
											<Text wrapping="false" text="{ParceiroNegocioDetails/RazaoSocial}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Titular" sortProperty="Titular">
										<Label text="Titular"/>
										<t:template>
											<Text text="{Titular}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Banco" sortProperty="Banco">
										<Label text="Banco"/>
										<t:template>
											<Text text="{Banco}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Agencia" sortProperty="Agencia">
										<Label text="Agência"/>
										<t:template>
											<Text text="{Agencia}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="ContaCorrente" sortProperty="ContaCorrente">
										<Label text="Conta Corrente"/>
										<t:template>
											<Text text="{ContaCorrente}"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onRefresh"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>
						</Panel>
					</VBox>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="Incluir Novo" press="onIncluir"/>
						<Button icon="sap-icon://edit" text="Editar" press="onEditar"/>
						<Button icon="sap-icon://delete" text="Excluir" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>